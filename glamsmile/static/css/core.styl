main_col_width = 1000px
main_col_width_without_margin = 898px

dev(box-sizing=border-box)
    -moz-box-sizing box-sizing
    // border 1px dashed rgba(128,128,128,0.3)

easer(t)
    -webkit-transition all t ease
    -moz-transition all t ease
    -o-transition all t ease
    -ms-transition all t ease
    transition all t ease

ie7_inline_block_fix()
    zoom 1
    *display inline


